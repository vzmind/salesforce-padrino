  .secondary-navigation
    %ul.wat-cf
      %li "oto"
  .content
    %h2.title
      "Leads"
    .inner
      %table.table
        %tr
          %th.first="ID"
          %th="Name"
          %th.last="&nbsp;"
        -@leads.each do |lead|
          %tr
            %td.first=lead["Id"]
            %td=lead["Name"]
            %td.last
              ="edit"
              ="|"
              ="delete"
      .actions-bar.wat-cf
        .actions="&nbsp;"

