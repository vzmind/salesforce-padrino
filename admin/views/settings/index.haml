.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:settings, :index)
      %li=link_to pat(:new), url(:settings, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:settings)
    .inner
      %table.table
        %tr
          %th.first=mat(:setting, :id)
          %th=mat(:setting, :api_key_private)
          %th=mat(:setting, :api_key_public)
          %th.last="&nbsp;"
        -@settings.each do |setting|
          %tr
            %td.first=setting.id
            %td=setting.api_key_private
            %td=setting.api_key_public
            %td.last
              =button_to pat(:edit), url(:settings, :edit, :id => setting.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:settings, :destroy, :id => setting.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')"
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")