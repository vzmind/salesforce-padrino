.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:settings, :index)
      %li.active=link_to pat(:new), url(:settings, :new)
  .content
    %h2.title
      =pat(:new)
      =mt(:setting)
    .inner
      -form_for :setting, url(:settings, :create), :class => :form do |f|
        =partial "settings/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")